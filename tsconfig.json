{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
    },
    "include": [
      "**/*.ts",
      "**/*.js",
      "**/*.tsx",
      "**/*.jsx",
    ]
  }
}
